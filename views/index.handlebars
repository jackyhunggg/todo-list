<a href="./todos/new">New</a>

<ul>
    {{#each todos}}
    <li>
        {{!-- 由於 index 頁面的 checkbox 只能檢視、不能編輯，所以加入了 disabled 屬性 --}}
        <input type="checkbox" name="isDone" {{#if this.isDone }} checked {{/if}} disabled>
        {{this.name}}
        <a href="./todos/{{ this._id }}">detail</a>
        <a href="./todos/{{ this._id }}/edit">edit</a>
        <form action="./todos/{{ this._id }}?_method=DELETE" 
        method="POST" style="display: inline;">
        <button type="submit">delete</button>
        </form>
    </li>
    {{/each}}
</ul>